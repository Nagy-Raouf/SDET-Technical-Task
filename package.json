{
  "name": "sdet-technical-task",
  "version": "1.0.0",
  "description": "Combined Siemens SDET technical task automation scripts",
  "scripts": {
    "test:task1": "cd task1 && npx nightwatch",
    "test:task2": "cd task2 && npx nightwatch",
    "test:task3": "cd task3 && npx nightwatch",
    "test:task4": "cd task4 && npm run mock-auth & sleep 3 && npm test",
    "test:all": "npm run test:task1 && npm run test:task2 && npm run test:task3 && npm run test:task4"
  },
  "devDependencies": {
    "chromedriver": "^139.0.0",
    "nightwatch": "^3.4.0",
    "jest": "^29.7.0",
    "jest-html-reporter": "^3.10.2",
    "mock-user-auth": "^1.0.15",
    "supertest": "^7.1.4",
    "uuid": "^11.1.0"
  },
  "jest": {
    "reporters": [
      "default",
      [
        "./node_modules/jest-html-reporter",
        {
          "pageTitle": "Mock User Auth API Test Report",
          "outputPath": "./reports/test-report.html",
          "includeFailureMsg": true,
          "includeConsoleLog": true,
          "theme": "defaultTheme"
        }
      ]
    ],
    "testEnvironment": "node"
  }
}
